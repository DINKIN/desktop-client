
{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": false,
        "noImplicitAny": false,
        "module": "commonjs",
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ],
        "target": "es6",
        "skipLibCheck": true,
        "allowJs": true,
        "lib": ["es5", "es6", "dom"]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "tests"
    ]
}
